<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/card_margin"
    android:padding="@dimen/card_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/artImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_image_size"
            android:background="@color/shadow2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtArcAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_tran"
            android:padding="@dimen/pading_news_card"
            android:text="@string/app_name"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/txtArcDate"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/artImg" />

        <TextView
            android:id="@+id/txtArcDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_tran"
            android:padding="@dimen/pading_news_card"
            android:text="@string/app_name"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/artImg" />

        <TextView
            android:id="@+id/txtArcTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_tran"
            android:padding="@dimen/pading_news_card"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold"
            android:text="@string/app_name"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/artImg"
            app:layout_constraintEnd_toEndOf="@+id/artImg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/artImg" />

        <TextView
            android:id="@+id/txtArcDis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pading_news_card"
            android:text="@string/app_name"
            app:layout_constraintBottom_toTopOf="@+id/btnReadMore"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtArcTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtArcTitle" />

        <Button
            android:id="@+id/btnReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read_more"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>